<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Required for exact-time alarms on Android 12+ -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Required for foreground services -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Required to receive boot completed events (restore scheduled tasks) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Wake lock for background execution -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application>
        <!-- Receiver for AlarmManager alarms -->
        <receiver
            android:name=".receiver.CronjobAlarmReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tomandy.palmclaw.scheduler.EXECUTE_CRONJOB" />
            </intent-filter>
        </receiver>

        <!-- Foreground service for executing scheduled tasks -->
        <service
            android:name=".service.AgentExecutionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>

</manifest>
