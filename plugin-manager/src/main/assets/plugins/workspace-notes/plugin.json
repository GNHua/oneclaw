{
  "id": "workspace-notes",
  "name": "Workspace Notes",
  "version": "1.0.0",
  "description": "Persistent note-taking that saves to the workspace filesystem",
  "author": "PalmClaw Team",
  "entryPoint": "WorkspaceNotesPlugin",
  "tools": [
    {
      "name": "ws_save_note",
      "description": "Save a note to a file in the workspace. Notes persist across app restarts.",
      "parameters": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
            "description": "Filename to save the note as (e.g. 'todo.txt')"
          },
          "content": {
            "type": "string",
            "description": "The note content"
          }
        },
        "required": ["filename", "content"]
      }
    },
    {
      "name": "ws_read_note",
      "description": "Read a note from the workspace filesystem",
      "parameters": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
            "description": "Filename to read (e.g. 'todo.txt')"
          }
        },
        "required": ["filename"]
      }
    },
    {
      "name": "ws_append_note",
      "description": "Append content to an existing note file",
      "parameters": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
            "description": "Filename to append to"
          },
          "content": {
            "type": "string",
            "description": "Content to append"
          }
        },
        "required": ["filename", "content"]
      }
    },
    {
      "name": "ws_list_notes",
      "description": "List all files in the notes directory",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": []
      }
    },
    {
      "name": "ws_delete_note",
      "description": "Delete a note file from the workspace",
      "parameters": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
            "description": "Filename to delete"
          }
        },
        "required": ["filename"]
      }
    }
  ],
  "permissions": [],
  "dependencies": []
}
